<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/app_spacing_5dp"
            android:text="Status"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txtsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/app_spacing_5dp"
            android:text="Status"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txtsize" />
    </LinearLayout>

    <View
        android:id="@+id/seperator_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_spacing_2dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/response_code_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/app_spacing_5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/app_spacing_5dp"
            android:text="Response Code"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txtsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/response_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/app_spacing_5dp"
            android:text="Response Code"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txtsize" />
    </LinearLayout>

    <View
        android:id="@+id/seperator_view_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_spacing_2dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/app_spacing_5dp"
        android:text="Message"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txtsize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/response_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="@dimen/app_spacing_5dp"
        android:text="Status"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txtsize" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:visibility="gone" />


    <Button
        android:id="@+id/btnStartTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Start Transaction" />

</LinearLayout>