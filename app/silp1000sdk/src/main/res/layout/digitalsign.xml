<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_marginLeft="@dimen/margintop_component"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="@dimen/txtsize"
            android:textColor="@color/black"
            android:text="Customer Signature"
            android:textStyle="bold" />

        <Button
            android:id="@+id/clear"
            android:layout_width="@dimen/btnheight"
            android:layout_weight="0.2"
            android:layout_height="@dimen/btnheightmid"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_button"
            android:text="Clear"
            android:textStyle="bold"
            android:textSize="@dimen/txtsmall"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/getsign"
            android:layout_width="@dimen/btnheight"
            android:layout_height="@dimen/btnheightmid"
            android:layout_weight="0.2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_button"
            android:text="Submit"
            android:textStyle="bold"
            android:textSize="@dimen/txtsmall"
            android:textColor="@android:color/white" />
    </LinearLayout>

