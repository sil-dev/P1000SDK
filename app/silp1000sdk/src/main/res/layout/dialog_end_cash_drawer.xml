<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtDialogTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_top_dark"
                android:padding="15dp"
                android:text="End Cash Drawer"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txtsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bottom_light"
            android:backgroundTint="@color/colorLightBlue"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.youcloudp1000sdk.custom_view.LoadingSpinner
                    android:id="@+id/imgSpinner"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_spinner"
                    />

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Recording Cash Drawer Amount"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txtsize" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:text="Ok"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txtsize"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
