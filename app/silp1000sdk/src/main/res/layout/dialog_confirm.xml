<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layoutpading">

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/receipt_border"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/layoutpading">

            <ImageView
                android:id="@+id/imglogo"
                android:layout_width="@dimen/btnheight"
                android:layout_height="@dimen/btnheight"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margintop_component"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="left"
                android:text="Confirm Dialog"
                android:textColor="@color/white"
                android:textSize="@dimen/txtsize"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout10"
            android:gravity="center_vertical"
            android:background="@color/colorLightBlue"
            android:padding="@dimen/layoutpading">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Are you sure ?"
                android:textColor="@color/black"
                android:textSize="@dimen/txtsize" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/l1"
            android:gravity="center|end"
            android:background="@color/colorLightBlue"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btnheightmid"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dp"
                android:background="@drawable/receipt_border"
                android:text="No"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txtsize" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btnheightmid"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:background="@drawable/buttonpress"
                android:text="Yes"
                android:textColor="@color/white"
                android:textSize="@dimen/txtsize" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>